<div class="">

  <div class="erb_header">
    <h3>USER LOGIN!!!</h3>
  </div>

  <form class="form-horizontal" action="/users/login" method="post">

    <div class="form-group">
      <label for="email" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <input class="form-control" id="email" name="user[email]" type="text" placeholder="Email" />
      </div>
    </div>

    <div class="form-group">
      <label for="pw_hash" class="col-sm-2 control-label">Pw Hash</label>
